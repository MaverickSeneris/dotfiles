#################
## SAFE REMOVE ##
#################
# Safe delete: moves file to Trash
rm() {
    if [ "$#" -eq 0 ]; then
        echo -e "\e[31mâš ï¸  No file specified.\e[0m"
        return 1
    fi
    trash-put "$@"
    echo -e "\e[32mâœ… Moved to Trash:\e[0m $@"
}

# List trashed files (with empty feedback)
lstr() {
    if [ -z "$(trash-list)" ]; then
        echo -e "\e[31mğŸ§º Trash is empty.\e[0m"
    else
        echo -e "\e[34mğŸ—‚ï¸  Files in Trash:\e[0m"
        trash-list
    fi
}

# Restore trashed files
rstr() {
    if [ "$#" -eq 0 ]; then
        echo -e "\e[31mâš ï¸  Please specify a file number to restore.\e[0m"
        return 1
    fi
    trash-restore "$@"
    echo -e "\e[32mâ™»ï¸  Restored item(s):\e[0m $@"
}

# Empty Trash (with confirmation)
emtr() {
    read -p $'\e[33mâš ï¸  Empty Trash? (y/N): \e[0m' confirm
    if [[ "$confirm" =~ ^[Yy]$ ]]; then
        trash-empty
        echo -e "\e[32mğŸ§¹ Trash emptied successfully.\e[0m"
    else
        echo -e "\e[34mğŸ§º Trash not emptied.\e[0m"
    fi
}


