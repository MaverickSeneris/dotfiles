# ğŸ“˜ BASIC BASH CHEAT SHEET
cheat() {
    echo -e "\e[1;36mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\e[0m"
    echo -e " ğŸ§   \e[1;33mBasic Bash Command Cheat Sheet\e[0m"
    echo -e "\e[1;36mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\e[0m"

    echo -e "\e[1;32mNavigation:\e[0m"
    echo -e "  \e[1;33mcd [dir]\e[0m           â€“ change directory"
    echo -e "  \e[1;33mpwd\e[0m               â€“ print current directory"
    echo -e "  \e[1;33mls -la\e[0m            â€“ list all files (detailed)"
    echo

    echo -e "\e[1;32mFile Management:\e[0m"
    echo -e "  \e[1;33mcp src dest\e[0m        â€“ copy files"
    echo -e "  \e[1;33mmv src dest\e[0m        â€“ move or rename files"
    echo -e "  \e[1;33mrm -rf [file]\e[0m      â€“ remove file/folder (forcefully)"
    echo -e "  \e[1;33mtouch file.txt\e[0m     â€“ create empty file"
    echo -e "  \e[1;33mmkdir folder\e[0m       â€“ create folder"
    echo

    echo -e "\e[1;32mText & Search:\e[0m"
    echo -e "  \e[1;33mcat file\e[0m           â€“ display file contents"
    echo -e "  \e[1;33mgrep 'word' file\e[0m   â€“ search for text in file"
    echo -e "  \e[1;33mless file\e[0m          â€“ view file page by page"
    echo -e "  \e[1;33mhead/tail file\e[0m     â€“ show first/last lines"
    echo

    echo -e "\e[1;32mNetworking:\e[0m"
    echo -e "  \e[1;33mping google.com\e[0m    â€“ check connection"
    echo -e "  \e[1;33mcurl url\e[0m           â€“ fetch data from the web"
    echo -e "  \e[1;33mwget url\e[0m           â€“ download file"
    echo

    echo -e "\e[1;32mSystem Info:\e[0m"
    echo -e "  \e[1;33mtop / btop\e[0m         â€“ show processes"
    echo -e "  \e[1;33mfree -h\e[0m            â€“ check memory"
    echo -e "  \e[1;33mdf -h\e[0m              â€“ check disk usage"
    echo -e "  \e[1;33mwhoami\e[0m             â€“ show current user"
    echo -e "  \e[1;33muptime\e[0m             â€“ system uptime"
    echo

    echo -e "\e[1;32mPackage Management:\e[0m"
    echo -e "  \e[1;33msudo pacman -S pkg\e[0m â€“ install package"
    echo -e "  \e[1;33msudo pacman -R pkg\e[0m â€“ remove package"
    echo -e "  \e[1;33myay -S pkg\e[0m         â€“ install from AUR"
    echo -e "  \e[1;33myay -Ss keyword\e[0m    â€“ search AUR packages"
    echo

    echo -e "\e[1;32mOther Useful Commands:\e[0m"
    echo -e "  \e[1;33mhistory\e[0m            â€“ show command history"
    echo -e "  \e[1;33mclear\e[0m              â€“ clear terminal"
    echo -e "  \e[1;33mecho 'text'\e[0m        â€“ print text"
    echo -e "  \e[1;33mexit\e[0m              â€“ close terminal"
    echo -e "\e[1;36mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\e[0m"
}

# ==========================
# ğŸ’¾ BASHRC BACKUP
# ==========================

# Create backup of .bashrc to ~/Projects/dotfiles/bashrc
backupbash() {
    local backup_dir=~/Projects/dotfiles/bashrc
    local timestamp=$(date +"%Y-%m-%d_%H-%M-%S")
    local backup_file="$backup_dir/.bashrc_backup_$timestamp"

    mkdir -p "$backup_dir"

    # Delete any previous backups
    rm -f "$backup_dir"/.bashrc_backup_*

    # Create new backup
    cp ~/.bashrc "$backup_file"

    echo -e "\e[32mâœ… Backup created:\e[0m $backup_file"
}

